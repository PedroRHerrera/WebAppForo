@model IEnumerable<WebAppForo.Models.Mensaje>

@{
    ViewData["Title"] = "Mensajes";
}

<h1>Mensaje</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Texto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MsgId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MsgId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MsgId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
